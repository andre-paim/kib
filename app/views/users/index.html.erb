<div class="page-header">
  <h1>Users</h1>
</div>


<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Teaching</th>
      <th>Learning</th>
    </tr>
  </thead>
  
  <tbody>
    <% User.all.order('first_name').each do |user| %>
    <tr>
      <td><%= user.first_name + " " + user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.teachers.where(active: true).count %></td>
      <td><%= user.students.where(active: true).count %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>
