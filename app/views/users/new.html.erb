<div class="row">

  <div class="col-sm-4">
    <h1>Add a New User</h1>
  </div>

  <div class="col-sm-4">

    <%= bootstrap_form_for(@user) do |form| %>

      <%= form.text_field :name, required: true %>
      <%= form.email_field :email, required: true %>
      <%= form.text_field :password, required: true %>
      <%= form.submit "Sign Me Up!", class: 'btn btn-success'%>

    <% end %>

  </div>
</div>
